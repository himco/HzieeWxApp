<cu-custom bgColor="bg-gradual-green" isBack="{{true}}">
	<view slot="backText">返回</view>
	<view slot="content">证书录入</view>
</cu-custom>

<view class="bg-white padding">
	<view class="cu-steps">

		<block wx:for="{{stepList.names}}" wx:key="item">
			<view class="cu-item {{index>stepList.current?'':'text-green'}}">
				<text class="num" data-index="{{index + 1}}"></text> {{item}}
			</view>
		</block>

	</view>
</view>


<swiper style="height:75vh" easing-function="easeInOutCubic" current="{{stepList.current}}">

	<!-- 111基本信息 -->
	<swiper-item>

		<form>
			<view class="cu-bar bg-white solid-bottom margin-top">
				<view class="action">
					<text class="cuIcon-title text-red"></text>
					<text>基本信息</text><text class="text-sm text-red">(必填)</text>
				</view>
			</view>

			<view class="cu-form-group">
				<view class="title">证书名称</view>
				<input placeholder="请输入证书全称"></input>
			</view>

			<view class="cu-form-group">
				<view class="title">发证单位</view>
				<input placeholder="请输入发证单位"></input>
			</view>

			<view class="cu-form-group">
				<view class="title">发证时间</view>
				<picker mode="date" fields='month' value="{{date}}" bindchange="dateChange">
					<view style="text-align:left;line-height:unset" class="picker text-green">{{date}}</view>
				</picker>
			</view>

		</form>



		<!-- 证书类型 -->
		<form>
			<view class="cu-bar bg-white solid-bottom margin-top">
				<view class="action">
					<text class="cuIcon-title text-red"></text>
					<text>证书类型</text><text class="text-sm text-red">(必选)</text>
				</view>
			</view>

			<!-- <radio-group class="block" bindchange="radioChange">
				<view wx:for="{{certType}}" wx:key="item" class="cu-form-group">
					<view class="title">{{item}}</view>
					<radio style="padding-left:50vw" checked="{{!index}}" value="{{index}}"></radio>
				</view>
			</radio-group> -->

			<view class="cu-form-group">
				<view class="title">证书类型</view>
				<picker value="{{certType.current}}" range="{{certType.names}}" bindchange="typeChange">
					<view style="text-align:left;line-height:unset" class="picker text-green">{{certType.names[certType.current]}}</view>
				</picker>
			</view>


		</form>

	</swiper-item>



	<!-- 222证书上传 -->
	<swiper-item>

		<form>
			<view class="cu-bar bg-white margin-top">
				<view class="action">
					<text class="cuIcon-title text-red"></text>
					<text>证书图片上传</text><text class="text-sm text-red">(必填)</text>
				</view>
			</view>

			<view class="cu-form-group">
				<view class="grid col-1 grid-square flex-sub">

					<block wx:if="{{imgUrl==null||imgUrl==''}}">
						<view class="solids" bindtap="chooseImage">
							<text class="cuIcon-cameraadd"></text>
						</view>
					</block>

					<block wx:else>
						<view class="bg-img" bindtap="chooseImage">
							<image src='{{imgUrl}}' mode='aspectFit'></image>
							<view class="cu-tag bg-red" catchtap="delImg">
								<text class="cuIcon-close"></text>
							</view>
						</view>
					</block>

				</view>
			</view>

		</form>

	</swiper-item>



	<!-- 333证书信息 -- 根据第一步的证书类型改变 -->
	<swiper-item>

		<view wx:if="{{certType.names[certType.current]=='教师资格证'}}" class="cu-bar bg-white margin-top">
			<view class="action">
				<text class="cuIcon-title text-red"></text>
				<text>证书信息</text><text class="text-sm text-red">(必填)</text>
			</view>
		</view>
		
		<view wx:if="{{certType.names[certType.current]=='教师资格证'}}" class="cu-form-group">
			<view class="title">资格等级</view>
			<picker value="{{teacherType.current}}" range="{{teacherType.names}}" bindchange="teacherChange">
				<view style="text-align:left;line-height:unset" class="picker text-green">{{teacherType.names[teacherType.current]}}</view>
			</picker>
		</view>



		<view class="cu-bar bg-white margin-top">
			<view class="action">
				<text class="cuIcon-title text-yellow"></text>
				<text>其他信息</text><text class="text-sm text-yellow">(选填)</text>
			</view>
		</view>

		<view class="cu-form-group">
			<view class="title">证书编号</view>
			<input placeholder="请输入证书编号"></input>
		</view>

		<view class="cu-form-group">
			<view class="title">证书等级</view>
			<input placeholder="请输入证书等级"></input>
		</view>


	</swiper-item>




	<!-- 444补充信息 -->
	<swiper-item>

		<view class="cu-bar bg-white margin-top">
			<view class="action">
				<text class="cuIcon-title text-yellow"></text>
				<text>证书详情</text><text class="text-sm text-yellow">(选填)</text>
			</view>
			<view class="action">{{moreInfo==""?'0':moreInfo.length}}/200</view>
		</view>

		<view class="cu-form-group">
			<textarea style="min-height:10rem" maxlength="200" bindinput="updateTextarea" placeholder="请输入证书上其他的所有信息"></textarea>
		</view>

	</swiper-item>





</swiper>


<!-- <view style="height:180rpx;box-sizing:border-box;" class="bg-white"></view> -->
<view style="width:100%;position:fixed;bottom:20rpx" class="padding-xl flex justify-between">
	<button wx:if="{{stepList.current}}" class="cu-btn bg-grey lg btn-for-this" data-type="back" bindtap="changeStep">上一步</button>
	<button class="cu-btn bg-green lg btn-for-this" data-type="next" bindtap="changeStep">{{stepList.current==3?'提交':'下一步'}}</button>
</view>